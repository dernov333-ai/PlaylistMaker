<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App.CardButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/on_card</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>

    </style>

    <style name="Widget.AppCompat.TextView.TitleOnPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>

    </style>

    <style name="TextAppearance.App.ScreenTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>

    </style>

    <style name="TextAppearance.App.SettingsRow" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>

    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <!--<item name="cardElevation">@dimen/card_elevation</item>-->
        <item name="cardBackgroundColor">@color/card_background_on_primary</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Widget.App.CardView.MainButton" parent="Widget.App.CardView" />
    <!-- Стиль для поля ввода поисковой строки -->
    <style name="Widget.App.EditText.Search" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:hint">@string/title_search</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/search_tint</item>
    </style>
    <style name="TextAppearance.App.TrackName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.App.TrackArtist" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/track_artist</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextAppearance.App.PlaceholderTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>

    <!-- Общий стиль контейнера плейсхолдера (только view-свойства, без layout_* ) -->
    <style name="Widget.App.PlaceholderContainer" parent="">
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/place_holder_top_padding</item>
    </style>

    <!-- Стиль для кнопки «Обновить» в плейсхолдере ошибки -->
    <style name="Widget.App.PlaceholderButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">64dp</item>
        <item name="android:backgroundTint">@color/on_surface</item>
        <item name="android:textColor">@color/surface</item>
    </style>

</resources>